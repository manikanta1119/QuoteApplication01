@{
    ViewBag.Title = "Index";
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>
<script type="text/javascript" src="http://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/AngularCode.js"></script>
<style>
    .btn-space {
        margin-left: 0%;
        background-color: cornflowerblue;
        font-size: large;
    }
</style>
<h2>All Quotes</h2>
<div ng-app="myApp">
    <div ng-controller="myCtrl" ng-init="GetAllData()" class="divList">
        <p class="divHead">List of Quotes</p>
        <table cellpadding="12" class="table table-bordered table-hover">

            <tr>
                <td>
                    <b>ID</b>
                </td>
                <td>
                    <b>Quote</b>
                </td>
                <td>
                    <b>Author</b>
                </td>
                <td>
                    <b>Tags</b>
                </td>

                <td>
                    <b>Resource</b>
                </td>
                <td>
                    <b>Agenda</b>
                </td>
                <td>
                    <b>Actions</b>
                </td>
            </tr>
            <tr ng-repeat="quote in quotes">
                <td>
                    {{quote.Id}}
                </td>
                <td>
                    {{quote.Quote1}}
                </td>
                <td>
                    {{quote.Author}}
                </td>
                <td>
                    {{quote.Tags}}
                </td>
                <td>
                    
                    <a id ="Link" ng-href="{{quote.Resource}}" ng-click="Website(quote.Resource)">{{quote.Resource}}</a>

                </td>
                <td>
                    {{quote.Agenda}}
                </td>
                <td>
                    <input type="button" class="btn btn-warning" value="Update" ng-click="Updatequote(quote)" />
                    <input type="button" class="btn btn-danger" value="Delete" ng-click="Deletequote(quote)" />

                </td>

            </tr>
        </table>

        <div class="form-horizontal" role="form">
            <div class="container">
                <div class="row">
                    <h2>
                        <span id="spn">Add New Quote</span>
                    </h2>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">ID:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputQuote" placeholder="Id" ng-model="Id">
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Quote:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputQuote" placeholder="Quote" ng-model="Quote1">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Author:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputAuthor" placeholder="Author" ng-model="QuoteAuthor">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Tags:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputTags" placeholder="Tags" ng-model="QuoteTags">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Resource:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputResource" placeholder="Resource" ng-model="QuoteResource">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Agenda:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputAgenda" placeholder="Agenda" ng-model="QuoteAgenda">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <input type="button" id="btnSave" class="form-control btn-space" value="Submit" ng-click="InsertData()" />
                    </div>
                    
                    <div class="col-sm-6 col-lg-4">
                        <input type="button" id="btnSave" class="form-control btn-space" value="Clear" ng-click="reloadRoute ()"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Hidden("Id")
</div>
